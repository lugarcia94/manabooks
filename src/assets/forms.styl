
$input
    height: 45px
    padding: 0 15px
    line-height: 45px

input
    &[type=text], &[type=password], &[type=email], &[type=tel]
        @extend $input
        border: solid 1px rgba(0, 0, 0, 0.1)

    &:focus::placeholder
        color: transparent

textarea
    border: solid 1px rgba(0, 0, 0, 0.1)
    padding: 15px
