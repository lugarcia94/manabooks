@media mobile
    .menu 
        width: 100%
        overflow: hidden
        &--sub 
            display: none 
            background: rgba(0, 0, 0, .05)
                
        &--navigation 
            overflow-y: auto

            .menu 
                &__icon 
                    display: none 

                &__link
                    display: block 
                    padding: (gutter/2) gutter
                    font-size 16px
                    line-height normal
                    font-weight 600
                    color #211915


                &__item
                    &--nv1 
                        + .menu__item--nv1 
                            border-top: solid 1px rgba(0,0,0,.1)

                    &--has-child 
                        display: flex 
                        justify-content: space-between
                        align-items: stretch
                        flex-flow: row wrap 

                        &:after 
                            icon: "\f105"
                            order: 2
                            flex: 0 0 auto
                            
                            display: flex 
                            justify-content: center 
                            align-items: center
                            width: 45px 
                            font-size: 20px

                            transition: all 200ms ease

                        > .menu__link 
                            flex: 1 
                            order: 1
                            min-width: 0

                        > .menu--sub 
                            order: 3
                            flex: 0 0 100%

                        &[aria-expanded=true]
                            &:after 
                                transform: rotate(90deg)

@media desktop 
    .menu
        &--navigation
            .menu
                &__icon 
                    display: inline-block 
                    vertical-align: middle
                    margin-right: 5px 
                    img 
                        width: 20px
                        height: 20px 
                        object-fit: contain 
                &__ul
                    &--nv1
                        display: flex 
                        justify-content: space-between
                        flex-flow: row nowrap
                        height: 50px
                        position relative

                &__item 
                    &--hidden 
                        display: none 

                    &--has-child
                        &:hover 
                            .menu--nv2
                                opacity: 1 
                                visibility: visible
                          
                    &--nv2
                        &:hover
                            .menu--nv3
                                opacity: 1 
                                visibility: visible
                                    

                    &--nv1
                        position: relative
                        
                        &:hover
                            .menu__link--nv1
                                &:before 
                                    content: ''
                                    height: 3px
                                    background: color
                                    width: 100%
                                    position: absolute
                                    top: 93%
                                    left: 0

                        &:nth-child(n+8)
                            display none
                        
                &__link
                    font-size 16px
                    line-height normal
                    font-weight 600
                    color #211915

                    &:hover
                        text-decoration none

                    &--nv1
                        display: inline-block
                        padding: (gutter / 2)

                        white-space: nowrap
                    &--nv2 
                        display: block
                        padding: 5px (gutter / 2)

                &--sub 
                    padding: 10px 0

                &--nv2
                    position: absolute 
                    left: 50%
                    transform translateX(-50%)
                    top 100%

                    min-width: 250px
                    opacity: 0 
                    visibility: hidden

                    background: #fff 
                    box-shadow: 0 0 0 1px color 

                    border-radius: 4px

                &--nv3
                    position absolute
                    right 0
                    top 0px
                    
                    height 100%

                    opacity: 0 
                    visibility: hidden
                    

                &--rtl 
                    left: auto
                    right: 0

                &__all                    
                    display: flex
                    align-items: center
                    justify-content: center

                    &:hover
                        .menu--all
                            opacity: 1
                            visibility: visible

.button--menu
    background transparent