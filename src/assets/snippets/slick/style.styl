.slick
    &-arrow 
        position: absolute 
        top: 50%
        z-index: 100

        transform: translateY(-50%)
        transition: all .2s ease-in-out
        background transparent 

        svg
            width 16px !important
            height 26px
            color #000000

    &-next
        right: 20px 

    &-prev 
        left: 20px
    
    &-list, &-track
        min-width: 100%