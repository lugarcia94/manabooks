.product
    &__header 
        margin-bottom: 20px 
        
    &__link 
        display: block 

    &__figure
        position relative

    &__image 
        display: block 
        width: 100% 
        height: 260px
        object-fit: contain
    
    &__name
        font-size 14px
        line-height normal
        font-weight 600
        height 38px
        overflow hidden

        a 
            color #211915

        &:hover
            a
                color color

      .prices
        font-size: 14px
        font-weight: 600
        line-height: normal

        &__container
            .prices__old
                font-size: 12px
                font-weight: 600
                line-height: normal
                color: #808080
                text-decoration: line-through

        &__out 
            min-height: 60px
            display: block
            text-align: center
            display: flex
            justify-content: center
            align-items: center

    &__payment
        font-size: 15px
        line-height normal
        font-weight: 700
        color: color

        br
            display: none


    &__seeMore
            border-radius: 10px
            background-color: rgb(0, 144, 69)
            height: 57px
            display: flex
            align-items: center
            justify-content: center
            font-size: 24px
            color: #ffffff
            font-weight: bold
            line-height: normal
            opacity 0
            visibility hidden
            margin-top 17px

            &:hover 
                color #ffff
                opacity 0.8
            
            svg 
                margin-right 15px
                fill   #ffffff



.flags
    position: absolute
    bottom: 0
    left: 0;
    right: 0;

    &__list
        display: flex
        align-items: center
        justify-content: center
    
    &__item
        &:first-child
            margin-right: 10px

    &__title
        display: flex
        align-items: center
        justify-content: center
        padding 0 12px
        height: 21px
        border-radius: 20px
        font-size: 11px
        font-weight: 500
        line-height: normal
        color: #ffffff


    &__featured
        background-color: #2a66ff
    
    &__new
        background-color: #009045

@media mobile 
    .flags
        &__list
            flex-wrap: wrap

        &__item
            margin: 5px
