.product
    &__header 
        margin-bottom: 20px 
        
    &__link 
        display: block 

    &__image 
        display: block 
        width: 100% 
        height: 260px
        object-fit: contain
    
    &__name
        font-size 14px
        line-height normal
        font-weight 600
        height 38px
        overflow hidden

        a 
            color #211915

        &:hover
            a
                color color

      .prices
        font-size: 14px
        font-weight: 600
        line-height: normal

        &__container
            .prices__old
                font-size: 12px
                font-weight: 600
                line-height: normal
                color: #808080
                text-decoration: line-through

        &__out 
            min-height: 60px
            display: block
            text-align: center
            display: flex
            justify-content: center
            align-items: center

    &__payment
        font-size: 15px
        line-height normal
        font-weight: 700
        color: color

        br
            display: none

