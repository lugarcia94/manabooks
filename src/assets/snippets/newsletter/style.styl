.newsletter 
    background #ededed

    &__container 
        container: viewport 
        margin: (gutter) auto
        padding: (gutter) 0 

    &__header 
        text-align: center
        margin-bottom: (gutter / 2)

    &__title 
        flex 0 0 100%
        font-size: 14px
        font-weight: bold 
        line-height: normal

    &__form 
        margin: -5px

        input
            &:placeholder 
                font-style italic

    &__box, &__actions
        padding: 5px 

    &__description 
        font-size: 14px

    &__input
        border 1px solid color !important


    &__input, &__button
        width: 100% 
        border-radius 10px


    &__button 
        padding: 0 (gutter / 2)

@media (min-width: 768px)
    .newsletter
        &__form
            display: flex 
            justify-content: center
            align-items: center

        &__box
            flex: 1
            min-width: 0

@media (min-width: 992px)
    .newsletter 
        &__container 
            display: flex 
            justify-content: space-between
            align-items: center
        
        &__header 
            display: flex 
            justify-content: space-between
            align-items: center
            flex-wrap wrap
            margin: 0 -(gutter / 2)
            text-align: left
            flex 0 0 330px
        
        &__title, &__description
            padding 0 15px

        &__box, &__actions
            padding: (gutter / 2)

        &__actions
            flex 0 0 145px

        &__main 
            flex: 1
            min-width: 0
            margin-left: gutter

        

    

    